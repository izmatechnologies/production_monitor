            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7676"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textWip"
            style="@style/whiteText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="22dp"
            tools:text="556" />

        <TextView
            style="@style/whiteText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
